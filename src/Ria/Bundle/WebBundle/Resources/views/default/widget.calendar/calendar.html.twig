<div class="col-md-6">
    <h3 class="section-title">{{'calendar'|trans({}, 'common')}}</h3>
    <div class="custom-calendar" data-lang="{{ app.request.getLocale() }}">
        <table>
            <thead class="calendar-header">
            <tr class="calendar-month">
                <td>
                    <div class="month-nav prev-month">
                        <i class="icon-angle-left"></i>
                    </div>
                </td>
                <td colspan="5">
                    <div class="jump-to-date flex">
                        <div class="default-select">
                            <select id="select-month"></select>
                        </div>
                        <div class="default-select">
                            <select id="select-year"></select>
                        </div>
                    </div>
                </td>
                <td>
                    <div class="month-nav next-month">
                        <i class="icon-angle-right"></i>
                    </div>
                </td>
            </tr>
            </thead>
            <tbody class="calendar-body"></tbody>
        </table>
    </div>
</div>

