{% set firstColumnPosts = posts|slice(0, 5) %}
{% set secondColumnPosts = posts|slice(5, 5) %}

<noindex>

    <div class="related-news">
        <h3 class="section-title">{{ label }}</h3>

        <div class="row">
            <div class="col-md-6">

                {% set firstPost = firstColumnPosts|first %}

                {% if firstPost is not empty %}
                    {% set postUrl = path('post_view', {
                        'categorySlug': firstPost.category_slug,
                        'slug': firstPost.slug,
                    }) %}
                    <div class="news-block">
                        <div class="image">
                            <a href="{{ postUrl }}"
                               class="ga-event-link">
                                <img src="{{ image(firstPost.image, {'thumb': 400}) }}"
                                     alt="{{ firstPost.getTitleWithoutQuotes() }}"
                                     title="{{ firstPost.getTitleWithoutQuotes() }}">
                            </a>
                        </div>
                        <div class="info">
                            <a class="title" href="{{ postUrl }}">{{ firstPost.getPreparedTitle()|raw }}</a>
                            <div class="news-date">
                                <span>{{ firstPost.publishedAt|format_datetime(pattern='d MMMM, y') }}</span>
                                <span>{{ firstPost.publishedAt.format('H:i') }}</span>
                            </div>
                        </div>
                    </div>
                    <!-- News block-->
                {% endif %}


                <div class="rest-news flex">

                    {% for post in firstColumnPosts|slice(1) %}

                        {% set postUrl = path('post_view', {
                            'categorySlug': post.category_slug,
                            'slug': post.slug,
                        }) %}

                    <div class="news-block small">
                        <div class="image">
                            <a href="{{ postUrl }}"
                               class="ga-event-link">
                                <img src="{{ image(post.image, {'thumb': 194}) }}"
                                     alt="{{ post.getTitleWithoutQuotes() }}"
                                     title="{{ post.getTitleWithoutQuotes() }}">
                            </a>
                        </div>
                        <div class="info">
                            <a class="title" href="{{ postUrl }}">{{ post.getPreparedTitle()|raw }}</a>
                            <div class="news-date">
                                <span>{{ post.publishedAt|format_datetime(pattern='d MMMM, y') }}</span>
                                <span>{{ firstPost.publishedAt.format('H:i') }}</span>
                            </div>
                        </div>
                    </div>

                    {% endfor %}
                </div>

            </div>
            <!-- Col-->

            <div class="col-md-6">

                {% set firstPost = secondColumnPosts|first %}

                {% if firstPost is not empty %}
                    {% set postUrl = path('post_view', {
                        'categorySlug': firstPost.category_slug,
                        'slug': firstPost.slug,
                    }) %}
                    <div class="news-block">
                        <div class="image">
                            <a href="{{ postUrl }}"
                               class="ga-event-link">
                                <img src="{{ image(firstPost.image, {'thumb': 400}) }}"
                                     alt="{{ firstPost.getTitleWithoutQuotes() }}"
                                     title="{{ firstPost.getTitleWithoutQuotes() }}">
                            </a>
                        </div>
                        <div class="info">
                            <a class="title" href="{{ postUrl }}">{{ firstPost.getPreparedTitle()|raw }}</a>
                            <div class="news-date">
                                <span>{{ firstPost.publishedAt|format_datetime(pattern='d MMMM, y') }}</span>
                                <span>{{ firstPost.publishedAt.format('H:i') }}</span>
                            </div>
                        </div>
                    </div>
                    <!-- News block-->
                {% endif %}

                <div class="rest-news flex">

                    {% for post in secondColumnPosts|slice(1) %}

                        {% set postUrl = path('post_view', {
                            'categorySlug': post.category_slug,
                            'slug': post.slug,
                        }) %}

                        <div class="news-block small">
                            <div class="image">
                                <a href="{{ postUrl }}"
                                   class="ga-event-link">
                                    <img src="{{ image(post.image, {'thumb': 194}) }}"
                                         alt="{{ post.getTitleWithoutQuotes() }}"
                                         title="{{ post.getTitleWithoutQuotes() }}">
                                </a>
                            </div>
                            <div class="info">
                                <a class="title" href="{{ postUrl }}">{{ post.getPreparedTitle()|raw }}</a>
                                <div class="news-date">
                                    <span>{{ post.publishedAt|format_datetime(pattern='d MMMM, y') }}</span>
                                    <span>{{ firstPost.publishedAt.format('H:i') }}</span>
                                </div>
                            </div>
                        </div>

                    {% endfor %}
                </div>

            </div>
            <!-- Col-->

        </div>
    </div>

    <!-- Related news-->
</noindex>