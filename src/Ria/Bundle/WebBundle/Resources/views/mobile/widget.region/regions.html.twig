<section class="regional-news ptb-4">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h2 class="section-title">{{ 'regions_news'|trans({}, 'common') }}</h2>
                <div class="filter-links">
                    <ul>
                        {% for region in regions %}

                            <li>
                                <a href="{{ region.slug }}" class="ga-event-link"
                                   data-event="{{ 'regions_news'|trans({}, 'common') }} | {{ 'main_page'|trans({}, 'common') }}">
                                    {{ region.title }}
                                </a>
                            </li>

                        {% endfor %}
                    </ul>
                </div>
                <!-- Filter links-->
            </div>

            {% for post in posts %}

                {% set titleWithoutQuotes = post.getTitleWithoutQuotes() %}

                <div class="col-lg-3 col-md-6">
                    <div class="news-block card">
                        <div class="image">
                            <a href="{{ path('post_view', {
                                'categorySlug': post.category_slug,
                                'slug': post.slug,
                            }) }}"
                               class="ga-event-link"
                               data-event="{{ 'regions_news'|trans({}, 'common') }} | {{ 'main_page'|trans({}, 'common') }}">
                                <img src="{{ image(post.image, {'thumb': 226}) }}"
                                     alt="{{ titleWithoutQuotes }}"
                                     title="{{ titleWithoutQuotes }}">
                            </a>
                        </div>
                        <div class="info">
                            <a class="news-category" href="{{ post.city_slug }}">{{ post.city_title }}</a>
                            <a class="title ga-event-link"
                               href="{{ path('post_view', {
                                   'categorySlug': post.category_slug,
                                   'slug': post.slug,
                               }) }}"
                               data-event="{{ 'regions_news'|trans({}, 'common') }} | {{ 'main_page'|trans({}, 'common') }}">
                                {{ post.getPreparedTitle()|raw }}
                            </a>
                            <div class="news-date">
                                <span>{{ post.publishedAt|format_datetime(pattern='d MMMM, y') }}</span>
                                <span>{{ post.publishedAt.format('H:i') }}</span>
                            </div>
                        </div>
                    </div>
                </div>

            {% endfor %}

            <div class="col-12 flex-center">
                <div class="show-all">
                    <a href="/regions/">{{ 'regions_news_all'|trans({}, 'common') }}</a>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Regional news-->
