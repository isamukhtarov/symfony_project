<section class="photo-news ptb-4">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h2 class="section-title">{{ 'photo_news'|trans({}, 'common') }}</h2>
                <div class="swiper-container">
                    <div class="swiper-wrapper">

                        {% for post in posts %}

                            {% set titleWithoutQuotes = post.getTitleWithoutQuotes() %}

                            <div class="swiper-slide">
                                <div class="news-block">
                                    <div class="image">
                                        <a href="{{ path('post_view', {
                                            'categorySlug': post.category_slug,
                                            'slug': post.slug,
                                        }) }}" class="ga-event-link"
                                           data-event="{{ 'photo_news'|trans({}, 'common') }} | {{ 'main_page'|trans({}, 'common') }}">
                                            <img class="swiper-lazy"
                                                 alt="{{ titleWithoutQuotes }}"
                                                 title="{{ titleWithoutQuotes }}"
                                                 src="{{ image('thunk.jpg', {'thumb': 321}) }}"
                                                 data-src="{{ image(post.image, {'thumb': 321}) }}"
                                            >
                                        </a>
                                    </div>
                                    <div class="info">
                                        <a class="news-category"
                                           href="{{ path('category_view', {'slug': post.category_slug}) }}">{{ post.category_title }}</a>
                                        <a class="title ga-event-link" href="{{ path('post_view', {
                                            'categorySlug': post.category_slug,
                                            'slug': post.slug,
                                        }) }}"
                                           data-event="{{ 'photo_news'|trans({}, 'common') }} | {{ 'main_page'|trans({}, 'common') }}">
                                            {{ post.getPreparedTitle()|raw }}
                                        </a>
                                        <div class="news-date">
                                            <span>{{ post.publishedAt|format_datetime(pattern='d MMMM, y') }}</span>
                                            <span>{{ post.publishedAt.format('H:i') }}</span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        {% endfor %}

                    </div>
                    <div class="swiper-pagination"></div>
                </div>
                <!-- Slider container-->
            </div>
        </div>
    </div>
</section>
