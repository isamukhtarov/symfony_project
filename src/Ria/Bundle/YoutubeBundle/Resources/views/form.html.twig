{% extends '@RiaAdmin/layout.html.twig' %}

{% block content %}
    {{ form_start(form) }}
    {{ form_row(form._token) }}

    <div class="row">
        <div class="col-lg-4">
            <div class="panel">
                <div class="panel-body">
                    <div class="form-group" id="youtube_id">
                        {{ form_row(form.youtubeId) }}
                        <div class="video-preview col-md-12">
                            <div class="row">
                                <iframe src="{{ embedUrl(youtubeId) }}" width="100%" height="252"></iframe>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="panel">
                <div class="panel-heading">
                    <h3 class="panel-title">{{ 'Settings' | trans }}</h3>
                </div>
                <div class="panel-body">
                    {{ form_row(form.status) }}
                </div>
            </div>

            <div class="panel">
                <div class="panel-body">
                    <div class="form-group">
                        {{ form_row(form.submit, {'attr': {'class': 'btn btn-lg btn-primary btn-block'}}) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{ form_end(form, {'render_rest': false}) }}
{% endblock %}