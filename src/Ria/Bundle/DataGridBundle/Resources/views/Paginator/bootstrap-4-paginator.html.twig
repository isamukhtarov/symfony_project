{% if paginator.totalPageCount > 1%}
    {% block kit_grid_paginator %}
        <ul class="pagination float-right">
                <li class="prev{% if not paginator.previousButtonPage %} disabled{% endif %}">
                    <a class="page-link" href="{{ paginator.getUrl("currentPage", paginator.previousButtonPage) }}" title="previous">
                        <span aria-hidden="true">&laquo;</span><span class="sr-only">{{ "kitpages_data_grid.Previous" | trans }}</span></a>
                    </a>
                </li>

            {% for page in paginator.pageRange %}
                <li class="page-item{% if page == paginator.currentPage %} active{% endif %}">
                    <a class="page-link" href="{{ paginator.getUrl("currentPage",page) }}">{{ page }}</a>
                </li>
            {% endfor %}

            <li class="next{% if not paginator.nextButtonPage %} disabled{% endif %}">
                <a class="page-link" href="{{ paginator.getUrl("currentPage",paginator.nextButtonPage) }}" title="next">
                    <span aria-hidden="true">&raquo;</span><span class="sr-only">{{ "kitpages_data_grid.Next" | trans }}</span></a>
                </a>
            </li>
        </ul>
    {% endblock kit_grid_paginator %}
{% endif %}
